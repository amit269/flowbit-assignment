datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

model Vendor {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  category String?
  invoices Invoice[]
}

model Invoice {
  id        Int       @id @default(autoincrement())
  invoiceNo String
  amount    Float
  date      DateTime? // ðŸ‘ˆ make optional
  dueDate   DateTime? // ðŸ‘ˆ make optional
  status    String?
  month     String?
  vendorId  Int
  vendor    Vendor    @relation(fields: [vendorId], references: [id])
}
